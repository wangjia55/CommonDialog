<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_btn_orange_pressed"/>
            <corners android:radius="@dimen/view_dimen_3"/>
            <padding android:left="15dp" android:right="15dp"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_btn_orange_normal"/>
            <corners android:radius="@dimen/view_dimen_3"/>
            <padding android:left="15dp" android:right="15dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_btn_orange_unable"/>
            <corners android:radius="@dimen/view_dimen_3"/>
            <padding android:left="15dp"
                     android:right="15dp"/>
        </shape>
    </item>

</selector>