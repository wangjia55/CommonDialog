<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_dialog"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_dimen_25"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_17"/>

    <TextView
        android:id="@+id/text_view_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_dimen_35"
        android:layout_marginLeft="@dimen/view_dimen_15"
        android:layout_marginRight="@dimen/view_dimen_15"
        android:layout_marginTop="@dimen/view_dimen_35"
        android:gravity="center"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_17"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_dimen_15"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/view_dimen_15"
        android:paddingRight="@dimen/view_dimen_15">

        <Button
            android:id="@+id/button_negative"
            style="@style/style_button_grey"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="@dimen/view_dimen_10"
            android:layout_weight="1"
            android:text="@string/button_cancel"/>

        <Button
            android:id="@+id/button_positive"
            style="@style/style_button_orange"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:text="@string/button_ok"/>
    </LinearLayout>

</LinearLayout>